        s = bci.read_sample()
        if not s: continue
        f = nrpi.process(s)
        if not f: continue
        i, t = dec.decode(f)
        msg = rahul.interpret(i, t)
        out = sp.decide(i, msg, f["ri"])
        if msg:
            speak(msg)
            log.log("OUTPUT","TEXT",out)
        await asyncio.sleep(0.5)
    print("=== Done ===")
if __name__ == "__main__":
    try: asyncio.run(main())
    except KeyboardInterrupt: print("Interrupted.")
